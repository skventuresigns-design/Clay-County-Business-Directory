<script>
    (function() {
        // FETCH DATA FROM GITHUB (This is what keeps it updated)
        const githubURL = 'https://raw.githubusercontent.com/KFruti88/Buisness-Directory/main/directory.json';

        fetch(githubURL)
            .then(res => {
                if(!res.ok) throw new Error('Data file not found');
                return res.json();
            })
            .then(data => {
                const grid = document.getElementById('directory-grid');
                
                // Sort by town then build the cards
                grid.innerHTML = data.sort((a,b) => a.town.localeCompare(b.town)).map(biz => `
                    <div class="card" onclick="window.location.href='/profile?id=${biz.id}'">
                        <div class="logo-container">
                            <img src="${biz.logo}" onerror="this.src='https://via.placeholder.com/150?text=No+Logo'">
                        </div>
                        <div class="town-bar ${biz.town.toLowerCase().replace(' ', '-')}-bar">
                            ${biz.town}
                        </div>
                        <div class="biz-name">${biz.name}</div>
                        <div class="phone-row">
                            Phone : ${biz.phone || 'N/A'}
                        </div>
                    </div>
                `).join('');
            })
            .catch(err => {
                document.getElementById('directory-grid').innerHTML = `<h3>Offline: ${err.message}</h3>`;
            });
    })();
</script>
