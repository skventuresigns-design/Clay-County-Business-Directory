        gap: 30px;
        padding: 20px 0;
    }

    /* 2. Card Styling to match your screenshot */
    .card {
        background-color: #fffaf0; /* Off-white */
        border: 2px solid #000;
        box-shadow: 10px 10px 5px rgba(0,0,0,0.2);
        padding: 25px;
        text-align: center;
        cursor: pointer;
        display: flex;
        flex-direction: column;
        min-height: 450px;
        transition: transform 0.2s;
    }

    .card:hover { transform: scale(1.02); }

    .logo-container {
        height: 180px;
        display: flex;
        align-items: center;
